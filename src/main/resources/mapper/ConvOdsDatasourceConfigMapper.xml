<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lrhealth.data.converge.dao.mapper.ConvOdsDatasourceConfigMapper">

    <update id="updateTime">
        UPDATE conv_ds_config
        <set>
            <if test="status == true">
                heart_beat_time = now(),
                update_time = now()
            </if>
            <if test="status == false">
                heart_beat_time = null,
                update_time = now()
            </if>
        </set>
        WHERE id = #{dsId}
    </update>

</mapper>
