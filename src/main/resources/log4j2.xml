<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Properties>
        <!--日志路径-->
        <property name="LOG_PATH">logs/lr-rd-rdcp-data-converge</property>
        <!--服务节点-->
        <property name="serviceNode">$${date:yyyyMMddHHmmssSSS}</property>
        <!--基础日志-->
        <Property name="SYS_PATTERN">|%p |%d{yyyy-MM-dd HH:mm:ss.SSS} |%c |%X{trace.id} |${hostName} |${sys:service.name} |${serviceNode} ? %m%n
        </Property>
        <!--业务日志-->
        <Property name="EVENT_PATTERN">|%p |%d{yyyy-MM-dd HH:mm:ss.SSS} |%c |%X{trace.id} |${hostName} |${sys:service.name} |${serviceNode} |%X{serviceCode} |%X{eventType} |%X{subjectCode} |%X{subjectType} |%X{dataFrom} |%X{dataCode} |%X{dataVersion} ? %m%n
        </Property>
    </Properties>

    <!-- 自定义业务日志级别 -->
    <CustomLevels>
        <CustomLevel name="DEBUG" intLevel="350"/>
    </CustomLevels>


    <Appenders>
        <!-- 控制台输出 -->
        <Console name="SYSTEM_OUT">
            <PatternLayout pattern="${SYS_PATTERN}"/>
        </Console>

        <!--INFO日志-->
        <RollingRandomAccessFile name="INFO_FILE" immediateFlush="false" bufferedIo="true" bufferSize="131072"
                                 fileName="${LOG_PATH}/info.log"
                                 filePattern="${LOG_PATH}/history/%d{MM.dd.HH}.%i.info.log">
            <PatternLayout pattern="${SYS_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <SizeBasedTriggeringPolicy size="1025MB"/>
            </Policies>
            <DefaultRolloverStrategy max="500"/>
        </RollingRandomAccessFile>

        <!--WARN日志-->
        <RollingRandomAccessFile name="WARN_FILE" immediateFlush="false" bufferedIo="true" bufferSize="131072"
                                 fileName="${LOG_PATH}/warn.log"
                                 filePattern="${LOG_PATH}/history/%d{MM.dd.HH}.%i.warn.log">
            <PatternLayout pattern="${SYS_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <SizeBasedTriggeringPolicy size="1024MB"/>
            </Policies>
            <DefaultRolloverStrategy max="500"/>
        </RollingRandomAccessFile>

        <!--ERROR日志-->
        <RollingRandomAccessFile name="ERROR_FILE" immediateFlush="false" bufferedIo="true" bufferSize="131072"
                                 fileName="${LOG_PATH}/error.log"
                                 filePattern="${LOG_PATH}/history/%d{MM.dd.HH}.%i.error.log">
            <PatternLayout pattern="${SYS_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <SizeBasedTriggeringPolicy size="200MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingRandomAccessFile>


        <!--DEBUG日志-->
        <RollingRandomAccessFile name="DEBUG_FILE" immediateFlush="false" bufferedIo="true" bufferSize="131072"
                                 fileName="${LOG_PATH}/debug.log"
                                 filePattern="${LOG_PATH}/history/%d{MM.dd.HH}.%i.debug.log">
            <PatternLayout pattern="${SYS_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="INFO" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <SizeBasedTriggeringPolicy size="1024MB"/>
            </Policies>
            <DefaultRolloverStrategy max="500"/>
        </RollingRandomAccessFile>

    </Appenders>
    <Loggers>
        <AsyncRoot level="INFO" includeLocation="false" additivity="false">
            <AppenderRef ref="SYSTEM_OUT"/>
            <AppenderRef ref="INFO_FILE"/>
            <AppenderRef ref="WARN_FILE"/>
            <AppenderRef ref="ERROR_FILE"/>
            <AppenderRef ref="DEBUG_FILE"/>
        </AsyncRoot>
    </Loggers>
</Configuration>